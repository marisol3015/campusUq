<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uniquindio.electiva_android.campusuq.dialogos.Idioma">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutEspanol">

        <ImageButton
            android:id="@+id/espanol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/espanol"
            android:clickable="true"/>

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/espanol"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutEspanol">

        <ImageButton
            android:id="@+id/ingles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ingles" />

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingles"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </FrameLayout>

</RelativeLayout>
